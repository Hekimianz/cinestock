<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" href="/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/styles.css" />
    <script src="/newScripts.js" defer></script>
  </head>
  <body>
    <section class="new--cont">
      <div class="new--password">
        <h2>Enter Admin Password</h2>
        <input
          placeholder="password"
          class="admin--input"
          type="text"
          name="password"
        />
        <button class="pass--btn" disabled>Enter</button>
        <img class="close" src="/close.png" alt="Close" />
      </div>
      <h1>Add Movie</h1>
      <form id="new--form" action="/movie/new" method="POST">
        <div class="update--field">
          <label class="bold" for="title">Title:</label>
          <input type="text" name="title" , id="title" />
        </div>
        <div class="update--field">
          <label class="bold" for="image">Image:</label>
          <input type="url" name="image" id="image" />
        </div>

        <div class="update--field">
          <label class="bold" for="genre">Genre:</label>
          <select name="genre" id="genre">
            <% genres.forEach(genre => {%>
            <option value="<%= genre.id%>"><%=genre.name%></option>
            <%})%>
          </select>
        </div>

        <div class="update--field">
          <label class="bold" for="section">Section:</label>
          <select name="section" id="section">
            <% sections.forEach(section => {%>
            <option value="<%= section.id%>"><%=section.name%></option>
            <%})%>
          </select>
        </div>

        <div class="update--field">
          <label class="bold" for="supplier">Supplier:</label>
          <select name="supplier" id="supplier">
            <% suppliers.forEach(supplier => {%>
            <option value="<%=supplier.id%>"><%=supplier.name%></option>
            <%})%>
          </select>
        </div>
        <div class="update--field">
          <label class="bold" for="supplier">Stock:</label>
          <input type="number" name="stock" id="stock" />
        </div>
        <span class="bold tags--label">Tags:</span>
        <hr class="break" />
        <div class="tags--cont">
          <% tags.forEach(tag => {%>
          <div class="tag--field">
            <input
              type="checkbox"
              name="<%=tag.id%>"
              id="<%=tag.id%>"
              class="tag--checkbox"
            />
            <label for="<%= tag.id%>"
              ><%= tag.name[0].toUpperCase() + tag.name.slice(1)%></label
            >
          </div>
          <% })%>
        </div>

        <button class="update--btn">Add</button>
      </form>
    </section>
  </body>
</html>
